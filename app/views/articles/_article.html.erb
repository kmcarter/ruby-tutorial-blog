<h2>
	<%= link_to article.title, article_path(article) %>
</h2>
<p class="lead">
	by <a href="index.php">Start Bootstrap</a>
</p>
<p><%= icon("clock-o") %> Posted on <%= article.created_at.to_formatted_s(:long) %></p>
<hr>
<img class="img-responsive" src="http://placehold.it/900x300" alt="">
<hr>
<p><%= truncate(article.text, length: 200) %></p>
<%= link_to icon("edit") + ' Edit', edit_article_path(article), class: "btn btn-info" %>
<%= link_to icon("times-circle") + ' Delete', articles_path, class: "btn btn-danger" %>
<%= link_to 'Read More ', article_path(article), class: "btn btn-primary" %>