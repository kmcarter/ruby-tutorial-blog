<h1>Sign Up</h1>

<%= form_for @user, html: { role: "form" } do |f| %>
  <% if @user.errors.any? %>
		<div id="error_explanation" class="alert alert-danger" role="alert">
			<strong>
				<%= icon("warning") %>
				<%= pluralize(@user.errors.count, "error") %>
				prohibited this user from being created:
			</strong>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
  <% end %>
	<div class="row">
		<div class="col-md-6 col-sm-12">
			<div class="form-group">
				<%= f.label :name %><br />
				<%= f.text_field :name, class: "form-control", tabindex: 10 %>
			</div>
			<div class="form-group">
				<%= f.label :password %><br />
				<%= f.password_field :password, class: "form-control", tabindex: 12 %>
			</div>
		</div>
		<div class="col-md-6 col-sm-12">
			<div class="form-group">
				<%= f.label :email %><br />
				<%= f.text_field :email, class: "form-control", tabindex: 11 %>
			</div>
			<div class="form-group">
				<%= f.label :password_confirmation %><br />
				<%= f.password_field :password_confirmation, class: "form-control", tabindex: 13 %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<%= f.submit class: "btn btn-primary", tabindex: 14 %>
			</div>
		</div>
	</div>
<% end %>